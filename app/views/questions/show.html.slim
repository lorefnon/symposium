.que-super-wrapper
  = qbox @inst
  .ans-wrapper
    .ans-tbar
      a.btn.btn-primary href="/questions/#{@inst.id}/answers/new" Add an answer
    .ans-list-wrapper
      - if @inst.answers.length == 0
        .no-ans-decl
      - else
        ul.ans-list
          - @inst.answers.each do |ans|
            li.ans-list-item
              = ans_box ans
